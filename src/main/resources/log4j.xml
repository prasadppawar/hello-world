<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC
  "-//APACHE//DTD LOG4J 1.2//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<!-- <!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"> -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss.SSS}] %-5p [%t][%c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="FILE" class="org.apache.log4j.FileAppender">
		<param name="file" value="/tmp/projects/PathFinder/PathfinderApp2.log" />
		<param name="immediateFlush" value="true" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="[%d{dd MMM yyyy HH:mm:ss.SSS}] %-5p [%t][%c] %m%n" />
		</layout>
	</appender>


	<logger name="com.developer">
		<level value="debug" />
	</logger>

	<root>
		<priority value="warn" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

</log4j:configuration>